<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night_sky_animation"
    android:id="@+id/mainPage"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/lgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="527dp"
        android:layout_marginEnd="151dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/lg_logo"
        android:foregroundGravity="center_vertical|center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/buttonsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="270dp"
        android:layout_marginEnd="50dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginStart="50dp"
        android:layout_weight="2"
        android:visibility="gone"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="2">

        <Button
            android:id="@+id/button1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#03A9F4"
            android:onClick="buttonClicked"
            android:tag="1"
            android:text="@string/button_1"
            app:cornerRadius="50dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#F44336"
            android:onClick="buttonClicked"
            android:tag="2"
            android:text="@string/button_2"
            app:cornerRadius="50dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#FFC107"
            android:onClick="buttonClicked"
            android:tag="3"
            android:text="@string/button_3"
            app:cornerRadius="50dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="2" />

        <Button
            android:id="@+id/button4"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#4CAF50"
            android:onClick="buttonClicked"
            android:tag="4"
            android:text="@string/button_4"
            app:cornerRadius="50dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>